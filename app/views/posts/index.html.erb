<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <!-- ユーザーの画像 -->
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}", data: {"turbolinks" => false}) %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}", data: {"turbolinks" => false}) %>
        </div>
      </div>
    <% end %>
    <!-- ページネーション機能 -->
    <%= paginate @posts %>
  </div>
</div>