<div class="main posts-index">
  <div class="container">
    <h1 class="form-heading">投稿検索</h1>

    <%= form_tag("/posts/search",:method => 'get', :class => "search-form") do %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search', :name => nil %>
    <% end %>

    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <!-- ユーザーの画像 -->
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}", data: {"turbolinks" => false}) %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}", data: {"turbolinks" => false}) %>
          
          <div class="post-image">
            <% if post.image %>
              <!-- 投稿画像 -->
              <a href="<%= "/post_images/#{post.image}" %>" target="_blank"><img src="<%= "/post_images/#{post.image}" %>"></a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>