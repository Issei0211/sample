<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">ユーザー一覧</h1>
    <% @users.each do |user| %>
      <div class="users-index-item">
        <div class="user-left">
          <!-- プロフィール画像 -->
          <img src="<%= "/user_images/#{user.image_name}" %>">
        </div>
        <div class="user-right">
          <%= link_to(user.name, "/users/#{user.id}", data: {"turbolinks" => false}) %>
        </div>
      </div>
    <% end %>
    <!-- ページネーション機能 -->
    <%= paginate @users %>
  </div>
</div>